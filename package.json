{
    "name": "angry-pixel",
    "version": "1.2.5",
    "description": "Lightweight 2D game engine made with TypeScript.",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "module": "lib/index.esm.js",
    "scripts": {
        "build": "rollup -c",
        "clean": "tsc --build --clean",
        "prepare": "npm run build",
        "lint": "eslint . --ext .ts",
        "lint-and-fix": "eslint . --ext .ts --fix",
        "prettier-format": "prettier --write \"src/**/*.{ts,js,css,html}\"",
        "prettier-check": "prettier --check \"src/**/*.{ts,js,css,html}\"",
        "docs": "typedoc"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/angry-pixel-studio/angry-pixel-engine.git"
    },
    "homepage": "https://github.com/angry-pixel-studio/angry-pixel-engine",
    "keywords": [
        "angry pixel",
        "game engine",
        "video games",
        "engine",
        "2d engine",
        "webgl",
        "canvas",
        "typescript",
        "game development"
    ],
    "author": "Mauro Cristy <maurocristy@gmail.com>",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "@types/node": "^20.8.9",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "eslint": "^8.53.0",
        "prettier": "^2.1.2",
        "rollup": "^2.49.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.35.0",
        "tslib": "^2.6.1",
        "typedoc": "^0.25.3",
        "typedoc-plugin-markdown": "^3.16.0",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "angry-pixel-2d-physics": "^1.0.2",
        "angry-pixel-2d-renderer": "^1.0.6",
        "angry-pixel-math": "^1.0.2"
    }
}
