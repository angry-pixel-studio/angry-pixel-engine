{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "paths": {
            "@config/*": ["./src/config/*"],
            "@component/*": ["./src/component/*"],
            "@input": ["./src/utils/input"],
            "@manager/*": ["./src/manager/*"],
            "@system/*": ["./src/system/*"],
            "@misc": ["./src/utils/misc"]
        }
    },
    "references": [
        { "path": "../collisions" },
        { "path": "../ecs" },
        { "path": "../ioc" },
        { "path": "../math" },
        { "path": "../webgl" }
    ],
    "include": ["src"]
}
